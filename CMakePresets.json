{
	"version": 4,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 25,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "linux-base",
			"hidden": true,
			"generator": "Ninja",
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			},
			"binaryDir": "${sourceDir}/build/${presetName}",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "/usr/bin/clang-16",
				"CMAKE_CXX_COMPILER": "/usr/bin/clang++-16",
				"CMAKE_BUILD_TYPE": "Debug",
				"CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
				"CMAKE_BUILD_WITH_INSTALL_RPATH": "TRUE",
				"LLVM_EXTERNAL_SPIRV_HEADERS_SOURCE_DIR": "/usr/include/spirv",
				"WITH_OPENCL_BACKEND": "ON",
				"WITH_LEVEL_ZERO_BACKEND": "OFF",
				"WITH_ROCM_BACKEND": "ON",
				"ACPP_COMPILER_FEATURE_PROFILE" : "full",
				"ROCM_PATH": "/opt/rocm",
				"DEFAULT_TARGETS": "generic\\;hip:gfx1103",
				"CMAKE_INSTALL_PREFIX" : "${sourceDir}/build/install/${presetName}",
				"CPACK_GENERATOR": "DEB",
				"CPACK_DEB_COMPONENT_INSTALL": "OFF"
			}
		},
		{
			"name": "debug-linux",
			"displayName": "Debug (Linux)",
			"inherits": "linux-base"
		},
		{
			"name": "release-linux",
			"displayName": "Release (Linux)",
			"inherits": "linux-base",
			"cacheVariables": {
				"CMAKE_BUILD_TYPE": "Release"
			}
		},
		{
			"name": "release-linux-full",
			"inherits" : "release-linux",
			"binaryDir": "${sourceDir}/build.full.release",
			"cacheVariables" : {
				"CMAKE_C_COMPILER": "/usr/bin/clang",
				"CMAKE_CXX_COMPILER": "/usr/bin/clang++",
				"CUDA_TOOLKIT_ROOT_DIR" : "/usr/local/cuda",
				"WITH_CUDA_BACKEND" : "ON",
				"WITH_LEVEL_ZERO_BACKEND" : "ON"
			}
		},
		{
			"name": "release-win",
			"binaryDir": "$env{BUILD_PATH}/${presetName}",
			"cacheVariables": {
				// Use same llvm version for compiler and as llvm library
				"CMAKE_C_COMPILER": "$env{VCPKG_PATH}/installed/x64-windows-release/tools/llvm/clang.exe",
				"CMAKE_CXX_COMPILER": "$env{VCPKG_PATH}/installed/x64-windows-release/tools/llvm/clang++.exe",
				"LLVM_LIBRARY_DIRS" : "$env{VCPKG_PATH}/installed/x64-windows-release/lib",
				"LLVM_TOOLS_BINARY_DIR" : "$env{VCPKG_PATH}/installed/tools/x64-windows-release/llvm",
				"LLVM_VERSION_MAJOR" : "18",
				// "LLVM_DIR" : "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/lib/cmake/llvm",
				// "LLVM_TOOLS_BINARY_DIR" : "C:/Program Files/Microsoft Visual Studio/2022/Community/VC/Tools/Llvm/x64/bin",
				"CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_PATH}/scripts/buildsystems/vcpkg.cmake",
				"CMAKE_BUILD_TYPE": "Release",
				"VCPKG_TARGET_TRIPLET": "x64-windows-release",
				"VCPKG_OVERLAY_TRIPLETS": "${sourceDir}/cmake/vcpkg_triplets",
				// "CMAKE_WINDOWS_EXPORT_ALL_SYMBOLS" : "TRUE",
				"CUDA_TOOLKIT_ROOT_DIR": "$env{CUDA_PATH}",
				"ACPP_COMPILER_FEATURE_PROFILE": "minimal",
				"WITH_CUDA_BACKEND": "ON",
				"WITH_OPENCL_BACKEND": "OFF",
				"CPACK_GENERATOR": "ZIP"
			},
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		}
	],
	"buildPresets": [
		{
			"name": "default",
			"configurePreset": "release-linux"
		}
	]
}
